#General configuration
config defaultToCurrentScreen true
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
config windowHintsSpread true
config windowHintsSpreadSearchWidth 256
config windowHintsSpreadSearchHeight 256

# VARIABLES
alias full move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias HYPER ctrl;shift;alt;cmd

# HYPER Position bindings
bind left:${HYPER} ${lefthalf}
bind up:${HYPER} ${full}
bind right:${HYPER} ${righthalf}

# General Bindings
bind e:cmd hint asdfghjklzxcvbnmqwertyuiop 
bind g:cmd grid padding:5 0:6,2 1:8,3

# HYPER Apps
bind f:${HYPER} focus 'Finder'
bind e:${HYPER} focus 'Evernote'
bind m:${HYPER} focus 'Mail'
bind b:${HYPER} focus 'Safari'
bind s:${HYPER} focus 'Skype'
bind n:${HYPER} focus 'iTunes'
bind i:${HYPER} focus 'iTerm'
bind t:${HYPER} focus 'Sublime Text 2'
bind c:${HYPER} focus 'Calendar'
bind g:${HYPER} focus 'Google Chrome'

# HYPER focus
bind ]:${HYPER} focus right
bind [:${HYPER} focus left

# HYPER CONTROL
bind `:${HYPER} relaunch
bind tab:${HYPER} switch

# SUPER THROW
bind right:ctrl;alt throw 1 resize
bind left:ctrl;alt throw 0 resize
